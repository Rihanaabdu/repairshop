<body class="bg-neutral-700 h-screen w-screen text-white overflow-hidden">
    <%- include('../partials/header.ejs') %>
    <div class="w-full flex flex-col items-center">
        <p class="text-lg">Register a new item to be repaired</p>
        <form action="/admin" method="post" class="sm:w-120">
            <div class="flex flex-col relative">
                <label for="type" class="mb-[1px] text-[16px]">Type</label>
                <select name="type" id="type" class="bg-neutral-700">
                    <% for( let i = 0; i < type.length; i++ ) { %>
                        <option value="<%=type[i]%>"><%=type[i]%></option>
                        <% } %>
                </select>
            </div>
            <div class="flex flex-col relative">
                <label for="brand" class="mb-[1px] text-[16px]">Brand</label>
                <input type="text" id="brand" name="brand" class=" h-10 text-lg dark:bg-neutral-700 pr-10"
                placeholder="Brand">
            </div>
            <div class="flex flex-col relative pb-5">
                <label for="model" class="mb-[1px] text-[16px]">Model</label>
                <input type="text" id="model" name="model" class=" h-10 text-lg dark:bg-neutral-700"
                placeholder="Model">
                <% if (error) {%>
                    <p class="text-sm text-red-600 absolute bottom-0">
                        <%=error%>
                    </p>
                    <% } %>
            </div>
                <div class="flex justify-center">
                    <button class="py-1.5 w-40 bg-teal-700 text-white">
                        Add item
                    </button>
                </div>
            </form>
    </div>
</body>