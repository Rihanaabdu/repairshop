<body class="bg-neutral-700 h-screen w-screen text-white overflow-hidden">
    <%- include('../partials/header.ejs') %>
    <div class="w-full flex flex-col items-center">
        <p class="text-lg">Register a new staff member</p>
        <form action="/admin" method="post" class="sm:w-120">
            <div class="flex flex-col relative">
                <label for="name" class="mb-[1px] text-[16px]">Name</label>
                <input type="text" id="name" name="name" class=" h-10 text-lg dark:bg-neutral-700"
                placeholder="Name">
            </div>
            <div class="flex flex-col relative">
                <label for="username" class="mb-[1px] text-[16px]">Username</label>
                <input type="text" id="username" name="username" class=" h-10 text-lg dark:bg-neutral-700"
                placeholder="Username">
            </div>
            <div class="flex flex-col relative pb-5">
                <label for="password" class="mb-[1px] text-[16px]">Password</label>
                <input type="password" id="password" name="password" class=" h-10 text-lg dark:bg-neutral-700 pr-10"
                placeholder="Password">
                <% if (error) {%>
                    <p class="text-sm text-red-600 absolute bottom-0">
                        <%=error%>
                    </p>
                    <% } %>
                </div>
                <div class="flex justify-center">
                    <button class="py-1.5 w-40 bg-teal-700 text-white">
                        Register
                    </button>
                </div>
            </form>
    </div>
</body>